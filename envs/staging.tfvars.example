# Staging 环境模板（复制为 staging.tfvars 并填入实际值）

# VPS 信息
vps_host            = "staging-vps.internal"  # 或 IP 地址
vps_user            = "root"
ssh_port            = 22
ssh_private_key     = <<'KEY'
-----BEGIN OPENSSH PRIVATE KEY-----
PASTE_YOUR_PRIVATE_KEY_HERE
-----END OPENSSH PRIVATE KEY-----
KEY

# k3s 集群
cluster_name        = "staging-k3s"
k3s_channel         = "stable"
k3s_version         = ""
api_endpoint        = "i-k3s.example.com"
disable_components  = ["traefik"]

# 环境标识
environment         = "staging"
base_domain         = "example.com"
env_prefix          = "x-staging"  # Kubero/Vault 域名前缀
enable_ssl          = true

# Vault 密钥
vault_postgres_password = "CHANGE_ME"

# 其他服务密钥（后续放入 Vault/Secrets 管理）
redis_password              = "CHANGE_ME"
neo4j_password              = "CHANGE_ME"

# 存储
vault_postgres_storage  = "10Gi"
redis_storage               = "20Gi"
neo4j_storage               = "100Gi"

# Vault 配置
vault_chart_version = "0.31.0"
vault_image_tag     = "1.20.4"
