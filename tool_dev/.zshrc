# Set personal aliases, overriding those provided by Oh My Zsh libs,
# plugins, and themes. Aliases can be placed here, though Oh My Zsh
# users are encouraged to define aliases within a top-level file in
# the $ZSH_CUSTOM folder, with .zsh extension. Examples:
# - $ZSH_CUSTOM/aliases.zsh
# - $ZSH_CUSTOM/macos.zsh
# For a full list of active aliases, run `alias`.
#
# Example aliases
# alias zshconfig="mate ~/.zshrc"
# alias ohmyzsh="mate ~/.oh-my-zsh"

p8() {
    parsed_time=$(date -j -f "%H:%M" "$1" +"%s")
    adjusted_time=$(date -r $((parsed_time + 8 * 3600 + 30 * 60)) +"%H:%M")
    echo $adjusted_time
}

p9() {
    parsed_time=$(date -j -f "%H:%M" "$1" +"%s")
    adjusted_time=$(date -r $((parsed_time + 9 * 3600 + 30 * 60)) +"%H:%M")
    echo $adjusted_time
}
# Function to convert UNIX timestamp to readable time
tt() {
  if [ $# -eq 1 ]; then
    timestamp=$1
    # Convert timestamp to readable format using macOS-compatible syntax
    readable_time=$(date -u -r "$timestamp" "+%Y年%m月%d日 %H:%M:%S")
    echo "$readable_time"
  else
    echo "Usage: tt <timestamp>"
  fi
}


# ============================================
# Workspace loader & utilities
# ============================================
_zd_current="${${(%):-%N}:h}"
_zd_root="${_zd_current:h}"

# chws: change to workspace directory by name (workspace_<name>)
chws() {
  local ws=$1
  if [ -z "$ws" ]; then
    echo "usage: chws <workspace_name>" >&2
    return 1
  fi
  local target="$_zd_root/workspace_${ws}"
  if [ -d "$target" ]; then
    cd "$target" || return 1
  else
    echo "workspace not found: $target" >&2
    return 1
  fi
}

# Source all workspace-specific zsh configs
for _ws_file in "$_zd_root"/workspace_*/workspace.zsh; do
  [ -f "$_ws_file" ] && source "$_ws_file"
done

unset _zd_current _zd_root _ws_file
