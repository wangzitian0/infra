# Staging 环境模板（复制为 staging.tfvars 并填入实际值）

# VPS 信息
vps_host            = "staging-vps.internal"  # 或 IP 地址
vps_user            = "root"
ssh_port            = 22
ssh_private_key     = <<'KEY'
-----BEGIN OPENSSH PRIVATE KEY-----
PASTE_YOUR_PRIVATE_KEY_HERE
-----END OPENSSH PRIVATE KEY-----
KEY

# k3s 集群
cluster_name        = "staging-k3s"
k3s_channel         = "stable"
k3s_version         = ""
api_endpoint        = "api-x-staging.truealpha.club"
disable_components  = ["traefik"]

# 环境标识
environment         = "staging"
base_domain         = "truealpha.club"
domain_prefix       = "x-staging"  # Kubero/Infisical 域名前缀
enable_ssl          = true

# Infisical 密钥
infisical_postgres_password = "CHANGE_ME"
infisical_api_token         = ""

# 其他服务密钥（后续放入 Infisical 管理）
redis_password              = "CHANGE_ME"
neo4j_password              = "CHANGE_ME"

# 存储
infisical_postgres_storage  = "10Gi"
redis_storage               = "20Gi"
neo4j_storage               = "100Gi"

# Infisical 配置
infisical_chart_version = "1.7.2"
infisical_image_tag     = "v0.154.0"
