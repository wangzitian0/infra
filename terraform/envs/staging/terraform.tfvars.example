# Example Terraform variables for staging environment
# Copy to terraform.tfvars and fill in actual values

environment = "staging"
project_name = "truealpha"
domain = "truealpha.club"

# Cloudflare
cloudflare_api_token = "your_api_token_here"
cloudflare_zone_id = "your_zone_id_here"

# VPS Configuration
vps_count = 1
vps_size = "s-1vcpu-1gb"  # Adjust based on provider
vps_region = "nyc1"
ssh_keys = []  # Add your SSH key IDs/fingerprints

# Database
enable_managed_database = false  # Use containerized DBs for dev
database_size = "db-s-1vcpu-1gb"

# Monitoring
enable_monitoring = true

# Dokploy + Infisical bootstrap (runs only when enable_dokploy_infisical=true)
enable_dokploy_infisical   = true
dokploy_api_key            = "dokploy-api-key"
dokploy_ssh_public_key     = "ssh-ed25519 AAAA..."
dokploy_ssh_private_key    = "-----BEGIN OPENSSH PRIVATE KEY-----\n...\n-----END OPENSSH PRIVATE KEY-----"
infisical_encryption_key   = "32+chars-random-key"
infisical_admin_email      = "admin@example.com"
infisical_admin_password   = "super-strong-password"
infisical_postgres_user    = "infisical"
infisical_postgres_password= "infisical-db-password"
infisical_postgres_db      = "infisical"
infisical_license_key      = ""
infisical_host             = "secrets.truealpha.club"
infisical_redis_password   = "infisical-redis-password"
dokploy_force_redeploy_token = "" # bump when rotating secrets to force redeploy

# Tags
tags = {
  Environment = "dev"
  Project     = "truealpha"
  ManagedBy   = "terraform"
  Owner       = "platform-team"
}
