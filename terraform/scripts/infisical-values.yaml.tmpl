backend:
  replicaCount: 1
  image:
    tag: "${backend_image_tag}"
  service:
    type: ClusterIP

backendEnvironmentVariables:
  ENCRYPTION_KEY: "${encryption_key}"
  JWT_SIGNUP_SECRET: "${jwt_signup_secret}"
  JWT_REFRESH_SECRET: "${jwt_refresh_secret}"
  JWT_AUTH_SECRET: "${jwt_auth_secret}"
  JWT_SERVICE_SECRET: "${jwt_service_secret}"
  JWT_MFA_SECRET: "${jwt_mfa_secret}"
  JWT_PROVIDER_AUTH_SECRET: "${jwt_provider_secret}"
  SMTP_HOST: "${smtp_host}"
  SMTP_PORT: ${smtp_port}
  SMTP_SECURE: ${smtp_secure}
  SMTP_FROM_NAME: "${smtp_from_name}"
  SMTP_FROM_ADDRESS: "${smtp_from_address}"
  SMTP_USERNAME: "${smtp_username}"
  SMTP_PASSWORD: "${smtp_password}"
  SITE_URL: "${site_url}"
  INVITE_ONLY_SIGNUP: ${invite_only_signup}
  MONGO_URL: ""
  REDIS_URL: "${redis_url}"

mongodb:
  auth:
    enabled: true
    usernames:
      - "infisical"
    passwords:
      - "${mongodb_user_password}"
    databases:
      - "infisical"
    rootUser: "root"
    rootPassword: "${mongodb_root_password}"
  architecture: standalone
  persistence:
    enabled: true

ingress:
  enabled: false

mailhog:
  enabled: ${mailhog_enabled}
  ingress:
    enabled: false

redis:
  auth:
    enabled: false
